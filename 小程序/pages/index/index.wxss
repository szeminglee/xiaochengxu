.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 400rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .4s;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: 3992ff;
}
.content-text{
  margin: 20rpx auto;
  width: 90%;
  background: #fff;
  box-shadow: 0px 1px 8px rgba(143, 143, 143, .2);
  border-radius: 8rpx;
  padding:20rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 24px
}
.content-p{
  color: #999999;
  font-size: 20rpx;
  line-height: 18px;
  padding-top: 16rpx;
  margin: 0;
}
